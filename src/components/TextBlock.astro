---
const { title, company, duration } = Astro.props;
---

<div class="pt-4">
  <h2>{title}</h2>
  {
    company && duration && (
      <p class="text-muted">
        {company} - {duration}
      </p>
    )
  }
  {!company && duration && <p class="text-muted">{duration}</p>}
  <p class="pt-2">
    <slot />
  </p>
</div>
